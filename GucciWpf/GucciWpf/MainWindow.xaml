        <TextBox x:Name="txtGucci" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="87" Margin="182,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="477" RenderTransformOrigin="0.463,-0.435" Background="#FF1D918F" Text="Biggie Cheese&#xD;&#xA;"/>
    </Grid>
